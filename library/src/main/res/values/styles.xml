<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExpandableRadioButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar"/>

    <style name="ExpandableRadioButton.TitleStyle" parent="ExpandableRadioButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/titleTextColorActive</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="ExpandableRadioButton.TitleStyle.Active" parent="ExpandableRadioButton.TitleStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandableRadioButton.Tooltip.TextStyle" parent="ExpandableRadioButton">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>


</resources>